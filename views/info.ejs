<body>
    <div style="display:flex;">
        <div class="login_card">
            <form action="/info" method="post">
                <div style="font-weight:bold;font-size: 130%;"><label>Enter name:</label><input type='text' name='nam' style="color:red" autofocus="on"><br></div>
                <div style="font-weight:bold;font-size: 130%;"><label>Enter rollno: </label><input type='text' name='regno' style="color:red"><br></div>
                <div style="font-weight:bold;font-size: 130%;"><label>Enter department: </label><input type='text' name='dept' style="color:red"><br></div>
                <div style="font-weight:bold;font-size: 130%;"><label>Enter semester: </label><input type='text' name='semester' style="color:red"><br></div>
                <div class="but"><br><button type="submit" style="margin-left:50px">Register info</button></div>
            </form>
        </div>
    </div>
