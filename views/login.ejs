    <title>Login</title>
    <style>
        .login_card{
            border:2px solid black;
            background-color: rgba(255, 0, 255,1);
            margin:auto;
            padding:20px;
            border-radius:5px;
            display: flex;
            align-content: center;
            justify-content: center;
            margin-top:15%;
        }
        .reg{
            margin-top:3%;
            margin-left:35%;
            font-weight:bold;
            font-size: 140%;
        }
        .but{
            margin-left:20%;
        }
        body{
            background-repeat: no-repeat;
            background-size:100% 100%;
            background-attachment:fixed;
            background-image: url('https://imgs.search.brave.com/KfRyPcuGBsCvqJr-BkL5JDLFISBbcJjB0qN9dt_HVKQ/rs:fit:1200:1200:1/g:ce/aHR0cHM6Ly93d3cu/cGNjbGVhbi5pby93/cC1jb250ZW50L2dh/bGxlcnkvbGlicmFy/eS1oZC13YWxscGFw/ZXJzLzkxOTAwNC5q/cGc');
