<body>
    <div style="display:flex;">
        <div class="login_card">
            <form action="/login" method="post">
                <div style="font-weight:bold;font-size: 150%;">username <input type='text' name='user' style="color:red" autofocus="on"><br><br></div>
                <div style="font-weight:bold;font-size: 150%;">password <input type='password' name='pw' style="color:red"><br></div>
                <div class="but"><br><button type="submit" style="margin-left:50px">Login</button></div>
                <div class="reg"><a href="/register">Register</a></div>
            </form>
        </div>
    </div>
